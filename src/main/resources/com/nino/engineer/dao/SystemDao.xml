<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nino.engineer.dao.SystemDao">

    <select id="findSystemNotify" resultType="string">
        SELECT notify from system WHERE
    </select>

    <insert id="saveSystemNotify" parameterType="com.nino.engineer.domain.dto.System">
        INSERT INTO system(id, notify, create_time, update_time) VALUES(#{id}, #{notify}, NOW(), NOW())
        ON DUPLICATE KEY UPDATE notify = #{notify}, update_time = NOW()
    </insert>
</mapper>